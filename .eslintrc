{
	"env": {
		"browser": true,
		"commonjs": true,
		"node": true,
		"es6": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:react/recommended"
	],
	"parser": "babel-eslint",
	"parserOptions": {
		"allowImportExportEverywhere": true,
		"ecmaVersion": 8,
		"sourceType": "module"
	},
	"plugins": [
		"import",
		"react"
	],
	"rules": {
		"indent": [
			"error",
			"tab"
		],
		"linebreak-style": [
			"error",
			"unix"
		],
		"no-console": [
			"off"
		],
		"quotes": [
			"error",
			"single"
		],
		"react/prop-types": [
			"off"
		],
		"semi": [
			"error",
			"never"
		]
	}
}
